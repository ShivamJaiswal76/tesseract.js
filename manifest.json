{
  "manifest_version": 3,
  "name": "Universal Translator",
  "version": "1.0",
  "description": "Translate any webpage or image to English",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.mymemory.translated.net/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["tesseract.min.js", "content.js"]
  }]
}
